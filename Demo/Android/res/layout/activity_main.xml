<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/firstPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@android:string/untitled" />

    <TextView
        android:id="@+id/numberOfPersons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstPerson"
        android:text="@android:string/untitled" />

    <TextView
        android:id="@+id/AEGBBuilding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberOfPersons"
        android:text="@android:string/untitled" />

    <TextView
        android:id="@+id/numberOfBuildings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AEGBBuilding"
        android:text="@android:string/untitled" />

    <TextView
        android:id="@+id/firstRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberOfBuildings"
        android:text="@android:string/untitled" />

    <TextView
        android:id="@+id/numberOfRooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstRoom"
        android:text="@android:string/untitled" />

    <TextView
        android:id="@+id/firstGroupMembers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberOfRooms"
        android:text="@android:string/untitled" />

    <TextView
        android:id="@+id/numberOfGroups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstGroupMembers"
        android:text="@android:string/untitled" />

    <TextView
        android:id="@+id/secondAffiliationPersons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberOfGroups"
        android:text="@android:string/untitled" />

    <TextView
        android:id="@+id/numberOfAffiliations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secondAffiliationPersons"
        android:text="@android:string/untitled" />

</RelativeLayout>